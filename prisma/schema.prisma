// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  // Asegúrate de usar la variable correcta que configuraste en Vercel
  url      = env("DATABASE_URL") // LÍNEA CORREGIDA
}

// Aquí debes definir tus modelos, por ejemplo
model Session {
  id        Int      @id @default(autoincrement())
  token     String   @unique
  userId    Int
  user      Usuario  @relation(fields: [userId], references: [id])
  expires   DateTime
  createdAt DateTime @default(now())
}

model Usuario {
  id       Int       @id @default(autoincrement())
  email    String    @unique
  nombre   String
  sessions Session[]
}


model Category {
  id          Int       @id @default(autoincrement())
  name        String
  description String?
  slug        String?   @unique
  image_url   String?
  is_active   Boolean   @default(true)
  created_at  DateTime  @default(now())
  updated_at  DateTime  @updatedAt
  products    Product[]
}

model Product {
  id             Int       @id @default(autoincrement())
  name           String
  description    String?
  price          Float
  image_url      String?
  stock_quantity Int       @default(0)
  category       Category? @relation(fields: [categoryId], references: [id])
  categoryId     Int?
  is_active      Boolean   @default(true)
  created_at     DateTime  @default(now())
  updated_at     DateTime  @updatedAt
}
